# Kanban Agents Configuration
# Copy this file to .env and fill in your values

# ==================== Kanban API ====================
# Base URL of your Kanban API
KANBAN_URL=https://myteam.example.com/api

# Board ID to monitor (for polling mode)
BOARD_ID=your-board-id-here

# ==================== Repository ====================
# Path to the code repository agents will work on
REPO_PATH=/path/to/your/repo

# ==================== Anthropic API ====================
# Your Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-xxxxx

# ==================== Agent Configuration ====================
# Label that marks cards for agent processing
AGENT_LABEL=agent

# Seconds between polling cycles
POLL_INTERVAL=30

# Minutes before reprocessing same card
COOLDOWN_MINUTES=5

# ==================== Webhook Server ====================
# Secret for validating webhook signatures (should match Kanban webhook config)
WEBHOOK_SECRET=your-webhook-secret

# Port for webhook server
WEBHOOK_PORT=8080

# ==================== Logging ====================
LOG_LEVEL=INFO
