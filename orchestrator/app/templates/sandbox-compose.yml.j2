# Sandbox Docker Compose Template
# Generated by kanban orchestrator for sandbox: {{ full_slug }}
# Branch: {{ git_branch }}
# Base domain (strips kanban. prefix): {{ domain | replace('kanban.', '') }}

services:
  # PostgreSQL Database (cloned from workspace)
  {{ full_slug }}-postgres:
    image: postgres:15-alpine
    container_name: {{ full_slug }}-postgres
    restart: unless-stopped
    environment:
      - POSTGRES_DB={{ database_name }}
      - POSTGRES_USER={{ postgres_user | default('postgres') }}
      - POSTGRES_PASSWORD={{ postgres_password }}
    volumes:
      - {{ data_path }}/postgres:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ postgres_user | default('postgres') }} -d {{ database_name }}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=sandbox-db"
      - "kanban.workspace={{ workspace_slug }}"
      - "kanban.sandbox={{ sandbox_slug }}"
      - "kanban.full-slug={{ full_slug }}"

  # FastAPI Backend (sandbox branch)
  {{ full_slug }}-api:
    build:
      context: {{ data_path }}/repo/backend
      dockerfile: Dockerfile
    image: {{ full_slug }}-api:latest
    container_name: {{ full_slug }}-api
    restart: unless-stopped
    depends_on:
      {{ full_slug }}-postgres:
        condition: service_healthy
    environment:
      - DATABASE_URL=postgresql+asyncpg://{{ postgres_user | default('postgres') }}:{{ postgres_password }}@{{ full_slug }}-postgres:5432/{{ database_name }}
      - SECRET_KEY={{ app_secret_key }}
      - DEBUG=true
      - DOMAIN={{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}
      - PORT={{ port }}
      - CORS_ORIGINS=https://{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}
      - SANDBOX_MODE=true
      - GIT_BRANCH={{ git_branch }}
      # Microsoft Entra External ID (CIAM) - shared app registration
      - ENTRA_TENANT_ID={{ entra_tenant_id }}
      - ENTRA_AUTHORITY={{ entra_authority }}
      - ENTRA_CLIENT_ID={{ entra_client_id }}
      - ENTRA_CLIENT_SECRET={{ entra_client_secret }}
      - ENTRA_REDIRECT_URI=https://{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/api/auth/callback
    volumes:
      - {{ data_path }}/uploads:/app/uploads
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=sandbox-api"
      - "kanban.workspace={{ workspace_slug }}"
      - "kanban.sandbox={{ sandbox_slug }}"
      - "kanban.full-slug={{ full_slug }}"
      - "kanban.branch={{ git_branch }}"
      - "traefik.enable=true"
      - "traefik.project=kanban"
      # Strip /api prefix middleware
      - "traefik.http.middlewares.{{ full_slug }}-api-strip.stripprefix.prefixes=/api"
      # HTTPS router
      - "traefik.http.routers.{{ full_slug }}-api.rule=Host(`{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}`) && PathPrefix(`/api`)"
      - "traefik.http.routers.{{ full_slug }}-api.entrypoints=websecure"
      - "traefik.http.routers.{{ full_slug }}-api.tls=true"
      - "traefik.http.routers.{{ full_slug }}-api.tls.certresolver=kanban-letsencrypt"
      - "traefik.http.routers.{{ full_slug }}-api.middlewares={{ full_slug }}-api-strip"
      - "traefik.http.services.{{ full_slug }}-api.loadbalancer.server.port=8000"
      # HTTP router (redirect to HTTPS)
      - "traefik.http.routers.{{ full_slug }}-api-http.rule=Host(`{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}`) && PathPrefix(`/api`)"
      - "traefik.http.routers.{{ full_slug }}-api-http.entrypoints=web"
      - "traefik.http.routers.{{ full_slug }}-api-http.middlewares=redirect-to-https@file"

  # React Frontend (sandbox branch)
  {{ full_slug }}-web:
    build:
      context: {{ data_path }}/repo/frontend
      dockerfile: Dockerfile
    image: {{ full_slug }}-web:latest
    container_name: {{ full_slug }}-web
    restart: unless-stopped
    depends_on:
      - {{ full_slug }}-api
    environment:
      - VITE_API_URL=https://{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/api
      - VITE_WS_URL=wss://{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/ws
      - VITE_SANDBOX_MODE=true
      - VITE_GIT_BRANCH={{ git_branch }}
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=sandbox-web"
      - "kanban.workspace={{ workspace_slug }}"
      - "kanban.sandbox={{ sandbox_slug }}"
      - "kanban.full-slug={{ full_slug }}"
      - "kanban.branch={{ git_branch }}"
      - "traefik.enable=true"
      - "traefik.project=kanban"
      # HTTPS router
      - "traefik.http.routers.{{ full_slug }}-web.rule=Host(`{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}`)"
      - "traefik.http.routers.{{ full_slug }}-web.entrypoints=websecure"
      - "traefik.http.routers.{{ full_slug }}-web.tls=true"
      - "traefik.http.routers.{{ full_slug }}-web.tls.certresolver=kanban-letsencrypt"
      - "traefik.http.services.{{ full_slug }}-web.loadbalancer.server.port=5173"
      # HTTP router (redirect to HTTPS, but exclude ACME challenge path)
      - "traefik.http.routers.{{ full_slug }}-web-http.rule=Host(`{{ full_slug }}.sandbox.{{ domain | replace('kanban.', '') }}`) && !PathPrefix(`/.well-known/acme-challenge`)"
      - "traefik.http.routers.{{ full_slug }}-web-http.entrypoints=web"
      - "traefik.http.routers.{{ full_slug }}-web-http.middlewares=redirect-to-https@file"

  # Redis for sandbox (separate from workspace)
  {{ full_slug }}-redis:
    image: redis:7-alpine
    container_name: {{ full_slug }}-redis
    restart: unless-stopped
    volumes:
      - {{ data_path }}/redis:/data
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=sandbox-redis"
      - "kanban.workspace={{ workspace_slug }}"
      - "kanban.sandbox={{ sandbox_slug }}"
      - "kanban.full-slug={{ full_slug }}"

  # AI agents are spawned on-demand when cards are moved
  # No dedicated agent container - uses Claude Code subprocess via orchestrator
  # See process_agent_task in orchestrator/app/main.py

networks:
  {{ network_name }}:
    external: true
