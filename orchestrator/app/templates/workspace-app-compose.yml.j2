# Workspace App Docker Compose Template
# Generated by kanban orchestrator for workspace: {{ workspace_slug }}
# App template: {{ app_template_slug }}
# Base domain (strips kanban. prefix): {{ domain | replace('kanban.', '') }}

services:
  # PostgreSQL Database
  {{ workspace_slug }}-postgres:
    image: postgres:15-alpine
    container_name: {{ workspace_slug }}-postgres
    restart: unless-stopped
    environment:
      - POSTGRES_DB={{ database_name }}
      - POSTGRES_USER={{ postgres_user | default('postgres') }}
      - POSTGRES_PASSWORD={{ postgres_password }}
    volumes:
      - {{ data_path }}/postgres:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ postgres_user | default('postgres') }} -d {{ database_name }}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=workspace-db"
      - "kanban.workspace={{ workspace_slug }}"

  # FastAPI Backend
  {{ workspace_slug }}-api:
    build:
      context: {{ app_source_path }}/backend
      dockerfile: Dockerfile
    image: {{ workspace_slug }}-api:latest
    container_name: {{ workspace_slug }}-api
    restart: unless-stopped
    depends_on:
      {{ workspace_slug }}-postgres:
        condition: service_healthy
    environment:
      - DATABASE_URL=postgresql+asyncpg://{{ postgres_user | default('postgres') }}:{{ postgres_password }}@{{ workspace_slug }}-postgres:5432/{{ database_name }}
      - SECRET_KEY={{ app_secret_key }}
      - DEBUG=${DEBUG:-false}
      - DOMAIN={{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}
      - PORT={{ port }}
      - CORS_ORIGINS=https://{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}
      # Microsoft Entra External ID (CIAM) - shared app registration
      - ENTRA_TENANT_ID={{ entra_tenant_id }}
      - ENTRA_AUTHORITY={{ entra_authority }}
      - ENTRA_CLIENT_ID={{ entra_client_id }}
      - ENTRA_CLIENT_SECRET={{ entra_client_secret }}
      - ENTRA_REDIRECT_URI=https://{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/api/auth/callback
    volumes:
      - {{ data_path }}/uploads:/app/uploads
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=workspace-api"
      - "kanban.workspace={{ workspace_slug }}"
      - "traefik.enable=true"
      # Strip /api prefix middleware
      - "traefik.http.middlewares.{{ workspace_slug }}-api-strip.stripprefix.prefixes=/api"
      # HTTPS router
      - "traefik.http.routers.{{ workspace_slug }}-api.rule=Host(`{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}`) && PathPrefix(`/api`)"
      - "traefik.http.routers.{{ workspace_slug }}-api.entrypoints=websecure"
      - "traefik.http.routers.{{ workspace_slug }}-api.tls=true"
      - "traefik.http.routers.{{ workspace_slug }}-api.tls.certresolver=letsencrypt"
      - "traefik.http.routers.{{ workspace_slug }}-api.middlewares={{ workspace_slug }}-api-strip"
      - "traefik.http.services.{{ workspace_slug }}-api.loadbalancer.server.port=8000"
      # HTTP router (redirect to HTTPS)
      - "traefik.http.routers.{{ workspace_slug }}-api-http.rule=Host(`{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}`) && PathPrefix(`/api`)"
      - "traefik.http.routers.{{ workspace_slug }}-api-http.entrypoints=web"
      - "traefik.http.routers.{{ workspace_slug }}-api-http.middlewares=redirect-to-https@file"

  # React Frontend (Vite dev server)
  {{ workspace_slug }}-web:
    build:
      context: {{ app_source_path }}/frontend
      dockerfile: Dockerfile
    image: {{ workspace_slug }}-web:latest
    container_name: {{ workspace_slug }}-web
    restart: unless-stopped
    depends_on:
      - {{ workspace_slug }}-api
    environment:
      - VITE_API_URL=https://{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/api
      - VITE_WS_URL=wss://{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}{% if port != '443' %}:{{ port }}{% endif %}/ws
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=workspace-web"
      - "kanban.workspace={{ workspace_slug }}"
      - "traefik.enable=true"
      # HTTPS router
      - "traefik.http.routers.{{ workspace_slug }}-web.rule=Host(`{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}`)"
      - "traefik.http.routers.{{ workspace_slug }}-web.entrypoints=websecure"
      - "traefik.http.routers.{{ workspace_slug }}-web.tls=true"
      - "traefik.http.routers.{{ workspace_slug }}-web.tls.certresolver=letsencrypt"
      - "traefik.http.services.{{ workspace_slug }}-web.loadbalancer.server.port=5173"
      # HTTP router (redirect to HTTPS)
      - "traefik.http.routers.{{ workspace_slug }}-web-http.rule=Host(`{{ workspace_slug }}.app.{{ domain | replace('kanban.', '') }}`) && !PathPrefix(`/.well-known/acme-challenge`)"
      - "traefik.http.routers.{{ workspace_slug }}-web-http.entrypoints=web"
      - "traefik.http.routers.{{ workspace_slug }}-web-http.middlewares=redirect-to-https@file"

  # Redis for caching and sessions (optional)
  {{ workspace_slug }}-redis:
    image: redis:7-alpine
    container_name: {{ workspace_slug }}-redis
    restart: unless-stopped
    volumes:
      - {{ data_path }}/redis:/data
    networks:
      - {{ network_name }}
    labels:
      - "kanban.type=workspace-redis"
      - "kanban.workspace={{ workspace_slug }}"

networks:
  {{ network_name }}:
    external: true

volumes:
  postgres-data:
  redis-data:
