# Kanban Platform Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
CERT_MODE=development      # development | staging | production
DOMAIN=localhost
HOST_IP=127.0.0.1

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# =============================================================================
# Entra ID (Authentication)
# =============================================================================
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_TENANT_ID=

# =============================================================================
# Production Only (Let's Encrypt)
# =============================================================================
CERTBOT_EMAIL=admin@yourdomain.com
LETSENCRYPT_SERVER=https://acme-v02.api.letsencrypt.org/directory

# =============================================================================
# Internal Services (auto-configured)
# =============================================================================
REDIS_URL=redis://redis:6379
PORTAL_SECRET_KEY=change-me-in-production
CROSS_DOMAIN_SECRET=change-me-in-production

# =============================================================================
# Optional: Social Provider API Keys (stored in Key Vault in production)
# =============================================================================
# TWITTER_BEARER_TOKEN=
# GITHUB_ACCESS_TOKEN=
# YOUTUBE_API_KEY=
